<IfModule mod_negotiation.c>
  # Prevent Apache MultiViews from interfering with SPA routing
  Options -MultiViews
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request is exactly for index.html, leave it alone
  RewriteRule ^index\.html$ - [L]

  # Serve existing files, directories, and symlinks normally
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d [OR]
  RewriteCond %{REQUEST_FILENAME} -l
  RewriteRule ^ - [L]

  # Otherwise rewrite to index.html (SPA fallback)
  RewriteRule . /index.html [L]
</IfModule>

# Optional: set index file order (if needed)
DirectoryIndex index.html index.htm
